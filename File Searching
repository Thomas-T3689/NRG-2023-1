import os


def search_files(directory, keywords):
    matching_files = []
    for filename in os.listdir(directory):
        if filename.endswith(".txt"):  # You can adjust the file extension as needed
            if any(keyword.lower() in filename.lower() for keyword in keywords):
                matching_files.append(filename)
    return matching_files


# Example usage:
directory_to_search = "/Users/thomastang/PycharmProjects/NRG 2023/venv/Test1"
search_keywords = ["Psy"]

matching_files = search_files(directory_to_search, search_keywords)

if matching_files:
    print("Matching files:")
    for file_name in matching_files:
        print(file_name)
else:
    print("No matching files found.")
